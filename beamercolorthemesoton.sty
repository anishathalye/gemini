% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=sotonrichblack,bg=white}
\setbeamercolor{palette secondary}{fg=sotonrichblack,bg=white}
\setbeamercolor{palette tertiary}{bg=sotonrichblack,fg=white}
\setbeamercolor{palette quaternary}{fg=sotonrichblack,bg=white}
\setbeamercolor{structure}{fg=sotonblue}

% Headline
\setbeamercolor{headline}{fg=white,bg=sotonblue}
\setbeamercolor{headline rule}{bg=sotonhorizon1}

% Block
\setbeamercolor{block title}{fg=sotonblue,bg=white}
\setbeamercolor{block separator}{bg=sotonrichblack}
\setbeamercolor{block body}{fg=sotonrichblack,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=sotonrichblack,bg=sotonmarine3}
\setbeamercolor{block alerted separator}{bg=sotonrichblack}
\setbeamercolor{block alerted body}{fg=sotonrichblack,bg=sotonmarine3}

% Example Block
\setbeamercolor{block example title}{fg=white,bg=sotonmarine2}
\setbeamercolor{block example separator}{bg=sotonrichblack}
\setbeamercolor{block example body}{fg=white,bg=sotonmarine2}

% Heading
\setbeamercolor{heading}{fg=sotonrichblack}

% Itemize
\setbeamercolor{item}{fg=sotonblue}

% Bibliography
\setbeamercolor{bibliography item}{fg=sotonrichblack}
\setbeamercolor{bibliography entry author}{fg=sotonrichblack}
\setbeamercolor{bibliography entry title}{fg=sotonrichblack}
\setbeamercolor{bibliography entry location}{fg=sotonrichblack}
\setbeamercolor{bibliography entry note}{fg=sotonrichblack}
