% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=warwickblack,bg=warwickwhite}
\setbeamercolor{palette secondary}{fg=warwickblack,bg=warwickwhite}
\setbeamercolor{palette tertiary}{bg=warwickblack,fg=warwickwhite}
\setbeamercolor{palette quaternary}{fg=warwickblack,bg=warwickwhite}
\setbeamercolor{structure}{fg=warwickblack}

% Headline
\setbeamercolor{headline}{fg=warwickblack,bg=warwicklavender}

% Block
\setbeamercolor{block title}{fg=warwickblack,bg=warwickwhite}
\setbeamercolor{block separator}{bg=warwickblack}
\setbeamercolor{block body}{fg=warwickblack,bg=warwickwhite}

% Alert Block
\setbeamercolor{block alerted title}{fg=warwickblack,bg=warwickcoral20}
\setbeamercolor{block alerted separator}{bg=warwickblack}
