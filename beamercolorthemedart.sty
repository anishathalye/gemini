% Gemini theme
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================

\definecolor{dartmouthgreen}{RGB}{0  , 105, 62}
\definecolor{forestgreen}   {RGB}{18 , 49 , 43}
\definecolor{springgreen}   {RGB}{196, 221, 136}
\definecolor{summeryellow}  {RGB}{245, 220, 105}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=dartmouthgreen}

% Headline
\setbeamercolor{headline}{fg=lightgray,bg=dartmouthgreen}
\setbeamercolor{headline rule}{bg=forestgreen}

% Block
\setbeamercolor{block title}{fg=forestgreen,bg=white}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=forestgreen,bg=summeryellow}
\setbeamercolor{block alerted separator}{bg=black}
\setbeamercolor{block alerted body}{fg=black,bg=summeryellow}

% Example Block
\setbeamercolor{block example title}{fg=forestgreen,bg=springgreen}
\setbeamercolor{block example separator}{bg=black}
\setbeamercolor{block example body}{fg=black,bg=springgreen}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=forestgreen}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
